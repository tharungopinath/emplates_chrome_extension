{
    "manifest_version": 3,
    "name": "Emplates",
    "version": "1.1",
    "description": "Save and insert email templates in Gmail and Outlook, boosting your productivity and optimizing your workflow.",
    "permissions": ["storage"],
    "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon16.png"
    },
    "content_scripts": [
        {
        "matches": [
            "*://mail.google.com/*",
            "*://outlook.live.com/*",
            "*://outlook.office.com/*",
            "*://outlook.office365.com/*"
        ],
        "js": ["content.js"],
        "css": ["styles.css"]
        }
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    }
}